<section class="menu-page">
  <h2 class="menu-welcome mb-4">Add / Update Inventory</h2>

  <a href="/" class="back-link mb-3">
    ‚Üê Back to menu
  </a>

  <form id="inventory-form" class="menu-form">
    <div class="mb-3">
      <label class="form-label" for="salon_id">Salon</label>
      <select class="form-select" id="salon_id" required>
        <option value="" selected disabled>Select a salon</option>
        {{#each salons}}
          <option value="{{id}}">{{name}}</option>
        {{/each}}
      </select>
    </div>

    <div class="mb-3">
      <label class="form-label" for="product_id">Product</label>
      <select class="form-select" id="product_id" required>
        <option value="" selected disabled>Select a product</option>
        {{#each products}}
          <option value="{{id}}">{{name}} ({{unit}})</option>
        {{/each}}
      </select>
    </div>

    <div class="mb-3">
      <label class="form-label" for="quantity">Quantity</label>
      <input
        class="form-control"
        type="number"
        id="quantity"
        min="0"
        required
      />
      <div class="form-text">Enter the current quantity for this salon.</div>
    </div>

    <div class="mt-4 d-flex gap-2">
      <button type="submit" class="btn btn-dark">Save</button>
      <a href="/inventory" class="btn btn-outline-secondary">Cancel</a>
    </div>

    <p id="inv-msg" class="mt-3 text-danger small"></p>
  </form>
</section>

<script src="/js/inventory-new.js"></script>