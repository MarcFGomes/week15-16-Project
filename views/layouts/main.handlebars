<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Salon Inventory</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <link rel="stylesheet" href="/css/style.css" />
  </head>

  <body>
    <!-- Top Banner -->
    <header class="app-header">
      <div class="container-fluid px-3 px-md-4">
        <div
          class="d-flex align-items-center justify-content-between py-3 gap-3 flex-wrap"
        >
          <a href="/" class="app-title-link">
            <h1 class="app-title m-0">Salon Inventory</h1>
          </a>

          {{#if logged_in}}
            <button id="logout" class="btn logout-btn">
              Logout
            </button>
          {{/if}}
        </div>
      </div>
    </header>

    <!-- Page Content -->
    <main class="container my-4">
      {{{body}}}
    </main>

    {{#if logged_in}}
      <script src="/js/logout.js"></script>
    {{/if}}
  </body>
</html>