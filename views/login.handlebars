<div class="row g-4">
  <div class="col-12 col-lg-6">
    <div class="card">
      <div class="card-body">
        <h2 class="h5">Log In</h2>
        <form class="login-form">
          <div class="mb-3">
            <label class="form-label" for="email-login">Email</label>
            <input class="form-control" type="email" id="email-login" />
          </div>
          <div class="mb-3">
            <label class="form-label" for="password-login">Password</label>
            <input class="form-control" type="password" id="password-login" />
          </div>
          <button class="btn btn-dark" type="submit">Log in</button>
        </form>
        <p id="login-msg" class="mt-2 text-danger small"></p>
      </div>
    </div>
  </div>