<li class="list-group-item" data-inventory-id="{{id}}">
  <div class="menu-link">
    <div class="d-flex justify-content-between align-items-start gap-3">
      <div>
        <div class="product-name">{{product.name}}</div>

        <div class="product-meta">
          Salon: {{salon.name}} · Category: {{product.category}} · Unit: {{product.unit}}
        </div>

        <div class="product-meta">
          Barcode: {{product.barcode}}
        </div>

        {{#if user}}
          <div class="product-meta">
            Updated by: {{user.name}}
          </div>
        {{/if}}
      </div>

      <div class="text-end d-flex flex-column align-items-end gap-2">
        <div class="qty-pill">Qty: {{quantity}}</div>

        {{#if quantity}}
        {{else}}
          <div class="text-danger small">Out of stock</div>
        {{/if}}

        <!-- DELETE BUTTON -->
        <button
          type="button"
          class="btn btn-sm btn-outline-danger js-delete-inventory"
          data-id="{{id}}"
        >
          Delete
        </button>
      </div>
    </div>
  </div>
</li>