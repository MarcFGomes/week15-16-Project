<section class="menu-page">

  <h2 class="menu-welcome mb-4">Add New Product</h2>

  <a href="/products" class="back-link mb-3">
    ‚Üê Back to products
  </a>


  <form id="new-product-form" class="menu-form">
    <div class="mb-3">
      <label class="form-label" for="name">Product name</label>
      <input
        type="text"
        id="name"
        class="form-control"
        required
      />
    </div>

    <div class="mb-3">
      <label class="form-label" for="barcode">Barcode</label>
      <input
        type="text"
        id="barcode"
        class="form-control"
        placeholder="4046.."
        required
      />
    </div>

    <div class="mb-3">
      <label class="form-label" for="category">Category</label>
      <input
        type="text"
        id="category"
        class="form-control"
        required
      />
    </div>

    <div class="mb-3">
      <label class="form-label" for="unit">Unit</label>
      <input
        type="text"
        id="unit"
        class="form-control"
        placeholder="e.g. box, bottle"
        required
      />
    </div>

    <div class="row g-3">
      <div class="col-6">
        <label class="form-label" for="reorder_level">Reorder level</label>
        <input
          type="number"
          id="reorder_level"
          class="form-control"
          min="0"
          required
        />
      </div>

      <div class="col-6">
        <label class="form-label" for="target_level">Target level</label>
        <input
          type="number"
          id="target_level"
          class="form-control"
          min="0"
          required
        />
      </div>
    </div>

    <div class="mt-4 d-flex gap-2">
      <button type="submit" class="btn btn-dark">
        Save product
      </button>
      <a href="/products" class="btn btn-outline-secondary">
        Cancel
      </a>
    </div>
  </form>
</section>

<script src="/js/product-new.js"></script>